    <script>
        const courseData = {
            'web-dev': {
                title: 'Game PRO',
                icon: 'fas fa-code',
                description: 'Este curso abrange todas as tecnologias essenciais para se tornar um desenvolvedor web full-stack. Inclui HTML5, CSS3, JavaScript, React, Node.js, Express, MongoDB e muito mais. Aprenda a criar aplicações web modernas e responsivas desde o básico até conceitos avançados.',
                progress: 85,
                duration: '120h',
                level: 'Intermediário',
                modules: 12,
                completed: 10,
                modulesList: [
                    'Fundamentos de HTML5 e CSS3',
                    'JavaScript Moderno (ES6+)',
                    'Responsive Design',
                    'React e Componentes',
                    'Node.js e Express',
                    'Banco de Dados MongoDB',
                    'APIs RESTful',
                    'Autenticação e Segurança',
                    'Deploy e DevOps',
                    'Projeto Final - E-commerce',
                    'Otimização de Performance',
                    'Técnicas Avançadas'
                ]
            },
            'data-science': {
                title: 'Data Science com Python',
                icon: 'fas fa-chart-line',
                description: 'Curso completo de ciência de dados cobrindo Pandas, NumPy, Matplotlib, Scikit-learn e técnicas avançadas de machine learning. Aprenda a analisar dados, criar visualizações impactantes e construir modelos preditivos.',
                progress: 70,
                duration: '90h',
                level: 'Avançado',
                modules: 10,
                completed: 7,
                modulesList: [
                    'Python para Data Science',
                    'Pandas e Manipulação de Dados',
                    'Visualização com Matplotlib',
                    'Estatística Descritiva',
                    'Machine Learning Básico',
                    'Algoritmos de Classificação',
                    'Regressão e Clusterização',
                    'Deep Learning Básico',
                    'Projeto Prático',
                    'Apresentação de Resultados'
                ]
            },
            'ux-ui': {
                title: 'Design de Experiência do Usuário',
                icon: 'fas fa-paint-brush',
                description: 'Aprenda a criar interfaces que são tanto bonitas quanto funcionais. Inclui design thinking, pesquisa de usuário, prototipação, testes de usabilidade e princípios de acessibilidade.',
                progress: 95,
                duration: '80h',
                level: 'Intermediário',
                modules: 8,
                completed: 8,
                modulesList: [
                    'Fundamentos de UX/UI',
                    'Pesquisa com Usuários',
                    'Wireframing e Prototipação',
                    'Design System',
                    'Ferramentas (Figma, Sketch)',
                    'Testes de Usabilidade',
                    'Acessibilidade',
                    'Projeto Final'
                ]
            },
            'cloud': {
                title: 'Computação em Nuvem Avançada',
                icon: 'fas fa-cloud',
                description: 'Domine os serviços de cloud computing das principais plataformas. Inclui AWS, Azure, Google Cloud, arquiteturas serverless, containers com Docker e Kubernetes, e boas práticas de infraestrutura.',
                progress: 60,
                duration: '100h',
                level: 'Avançado',
                modules: 12,
                completed: 7,
                modulesList: [
                    'Fundamentos de Cloud',
                    'AWS EC2 e S3',
                    'Azure Services',
                    'Google Cloud Platform',
                    'Serverless Architecture',
                    'Docker e Containers',
                    'Kubernetes',
                    'Monitoramento e Logs',
                    'Segurança em Cloud',
                    'Auto-scaling',
                    'Migração para Cloud',
                    'Projeto Prático'
                ]
            }
        };

        document.addEventListener('DOMContentLoaded', function() {
            const courseItems = document.querySelectorAll('.course-item');
            const detailsPanel = document.getElementById('detailsPanel');
            const noSelection = document.getElementById('noSelection');
            const detailsContent = document.getElementById('detailsContent');
            
            courseItems.forEach(item => {
                item.addEventListener('click', function() {
                    // Remove active class from all items
                    courseItems.forEach(i => i.classList.remove('active'));
                    
                    // Add active class to clicked item
                    this.classList.add('active');
                    
                    // Show details
                    const courseId = this.dataset.course;
                    showCourseDetails(courseId);
                });
            });
            
            function showCourseDetails(courseId) {
                const course = courseData[courseId];
                
                if (!course) return;
                
                // Hide no selection message and show details
                noSelection.style.display = 'none';
                detailsContent.style.display = 'block';
                
                // Update details
                document.getElementById('detailsIcon').innerHTML = `<i class="${course.icon}"></i>`;
                document.getElementById('detailsTitle').textContent = course.title;
                document.getElementById('detailsDescription').textContent = course.description;
                document.getElementById('detailsProgress').style.width = `${course.progress}%`;
                
                // Update stats
                document.getElementById('statDuration').textContent = course.duration;
                document.getElementById('statLevel').textContent = course.level;
                document.getElementById('statModules').textContent = course.modules;
                document.getElementById('statProgress').textContent = `${course.progress}%`;
                
                // Update modules list
                const modulesList = document.getElementById('modulesList');
                modulesList.innerHTML = '';
                
                course.modulesList.forEach((module, index) => {
                    const isCompleted = index < course.completed;
                    const moduleItem = document.createElement('div');
                    moduleItem.className = 'module-item';
                    moduleItem.innerHTML = `
                        <i class="fas ${isCompleted ? 'fa-check-circle module-check' : 'fa-circle'}"></i>
                        <span>${module}</span>
                    `;
                    modulesList.appendChild(moduleItem);
                });
            }
        });
    </script>
